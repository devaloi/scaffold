{
  "name": "@devaloi/scaffold",
  "version": "1.0.0",
  "description": "CLI tool that scaffolds project templates from configurable blueprints",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts' && prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts' && prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "scaffold",
    "cli",
    "template",
    "generator",
    "project-scaffolder"
  ],
  "author": "devaloi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devaloi/scaffold.git"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "glob": "^13.0.5",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1",
    "ora": "^9.3.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
